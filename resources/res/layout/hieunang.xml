                <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="#000000" android:gravity="center" android:id="@+id/textview6" android:background="#f5f5f5" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="Skip" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
